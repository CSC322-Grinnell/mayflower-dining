
<h1>Editing Dish</h1>

<%= render 'form', dish: @dish %>

<h2>Ingredients</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dish.ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Show', @dish %> |
<%= link_to 'Back', dishes_path %>
